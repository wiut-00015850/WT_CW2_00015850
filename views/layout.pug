doctype html
html
    head
        title {/ExpressEvents\} - Events Planning App
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="/static/css/styles.css")
        script(src='/static/js/main.js')
        
    body
        header
            nav
                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    .container.d-flex
                        a.navbar-brand(href="/") {/ExpressEvents\}
                        ul.navbar-nav.ms-auto.d-flex.flex-row.gap-4
                            li.nav-item
                                form.d-flex(method='GET' action='/events')
                                    input#inputSearch.form-control(type="search" placeholder="Search events" name='search' aria-label="Search")
                                    button#btnSearch.btn.btn-outline-success(type="submit") Search
                            li.nav-item
                                a.nav-link(href="/") Home
                            li.nav-item
                                a.nav-link(href="/events") Upcoming Events
                            li.nav-item
                                a.nav-link(href="/events/passed") Past Events
                            li.nav-item
                                a.nav-link(href="/events/new") Create
                            li.nav-item
                                a#user-account.nav-link(href="/user/login") Log in

        #main.container.mt-5
            block content
    